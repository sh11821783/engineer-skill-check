<h1>お知らせ一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>公開日</th>
      <th>タイトル</th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= article.title %></td>
        <td></td>
        <td></td>
        <% if current_user.new_posting_auth %>
          <% if article.employee == current_user %>
            <td><%= link_to 'Edit', edit_employee_article_path(current_user.id, article) %></td>
          <% else %>
            <td></td>
          <% end %>
        <td><%= link_to 'Destroy', employee_article_path(current_user.id, article), method: :delete, data: { confirm: '本当に削除して宜しいですか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

