<h1>編集画面</h1>

<div style="text-align:center;">
  <%= form_with model: @article, url: employee_article_path(current_user.id,@article), method: :patch, local: true do |form| %>
    <%= render 'layouts/error_messages', model: form.object %>
    <br><div class="actions">
      <%= form.submit %>
    </div>

    <div class="form-group form-inline text-md-right input-group-sm">
      <%= form.label :title %><br><br>
      <%= form.text_field :title, placeholder:"タイトル（必須 50文字まで)", maxlength: 50 %>
    </div>

    <div class="form-group form-inline input-group-sm">
      <%= form.text_area :content, placeholder:"内容（必須 50文字まで)", maxlength: 50 %>
    </div>

  <% end %>
</div>

<%= link_to 'Show', employee_article_path(@article) %> |
<%= link_to 'Back', new_employee_article_path %>
